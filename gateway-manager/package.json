{
  "name": "clawdbot-gateway-manager",
  "version": "1.0.0",
  "description": "Standalone Gateway Manager for Clawdbot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "author": "Nemo",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "node-powershell": "^5.0.1"
  },
  "build": {
    "appId": "com.nemo.clawdbot-gateway-manager",
    "productName": "Clawdbot Gateway Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/**/*"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}
